extends .././layouts/main-layout.pug
block content
    main.main
        section.start-screen
            .start-screen__paralax-wrapper
                .start-screen__wrapper.container
                    .start-screen__title-wrapper
                        h1.start-screen__title
                            | Препараты для роста
                            br
                            span.start-screen__title-red-element.red-span
                                | spectrum pharm 
                            span.start-screen__umper
